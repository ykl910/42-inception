#!/bin/bash
service mysql start

# Phase 1: Before root password change
mysql -e "CREATE DATABASE IF NOT EXISTS \`${SQL_DATABASE}\`;"
echo "database \`${SQL_DATABASE}\` created!!"

mysql -e "CREATE USER IF NOT EXISTS \`${SQL_USER}\`@'localhost' IDENTIFIED BY '${SQL_PASSWORD}';"
echo "user \`${SQL_USER}\` created"

mysql -e "GRANT ALL PRIVILEGES ON \`${SQL_DATABASE}\`.* TO \`${SQL_USER}\`@'%' IDENTIFIED BY '${SQL_PASSWORD}';"
echo "user \`${SQL_USER}\` granted privileges on \`${SQL_DATABASE}\`.*"

# Change root password
mysql -e "ALTER USER 'root'@'localhost' IDENTIFIED BY '${SQL_ROOT_PASSWORD}';"
echo "root password changed"

# Phase 2: Re-authenticate with new root password
mysql -u root -p"${SQL_ROOT_PASSWORD}" -e "FLUSH PRIVILEGES;"

# Shutdown cleanly using the new password
mysqladmin -u root -p"${SQL_ROOT_PASSWORD}" shutdown

# Start MySQL server normally
exec mysqld_safe
